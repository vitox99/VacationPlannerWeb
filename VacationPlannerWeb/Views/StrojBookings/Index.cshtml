@model IEnumerable<StrojBooking>

@{
    ViewData["Title"] = "Stroj Bookings";
}

<h2>Události v kalendáři</h2>

<p>
    @if(User.IsInRole("Admin")||User.IsInRole("Manager")||User.IsInRole("Writer"))
        {
            <a class="btn btn-primary" asp-action="Create">Vytvořit novou událost</a>
        }
</p>
<table class="table" id="vacbooking-table">
    <thead>
        <tr>
            <th>
                <a>@Html.DisplayNameFor(model => model.Stroj) <b class="caret"></b></a>
            </th>
            <th>
                <a>@Html.DisplayNameFor(model => model.FromDate) <b class="caret"></b></a>
            </th>
            <th>
                <a>@Html.DisplayNameFor(model => model.ToDate) <b class="caret"></b></a>
            </th>
            <th>
                <a>@Html.DisplayNameFor(model => model.AbsenceType) <b class="caret"></b></a>
            </th>
            @* <th>
                <a>@Html.DisplayNameFor(model => model.Approval) <b class="caret"></b></a>
            </th> *@
            <th>
                <a>@Html.DisplayNameFor(model => model.SmerPrace) <b class="caret"></b></a>
            </th>
            <th>
                <a>@Html.DisplayNameFor(model => model.StrojMistr) <b class="caret"></b></a>
            </th>
            <th>
                <a>@Html.DisplayNameFor(model => model.Comment) <b class="caret"></b></a>
            </th>
            <th>
                <a>@Html.DisplayNameFor(model => model.User) <b class="caret"></b></a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Stroj.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FromDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AbsenceType.Name)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Approval)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.SmerPrace)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StrojMistr.Alias)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.DisplayName)
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Upravit</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details_min" asp-route-id="@item.Id">Detail</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-controller="StrojCalendar" asp-action="StrojManagerOverviewV2">Zpět na přehled kalendáře</a>
</div>

@section Scripts {
    <script src="~/js/TableSorting.js"></script>
    <script src="~/js/CalendarOverviewMargin.js"></script>
}
