@model Stroj

@{
    ViewData["Title"] = "Create";
}

<h2>Vytvořit</h2>

<h4>Stroj</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvNr" class="control-label"></label>
                <input asp-for="InvNr" class="form-control" />
                <span asp-validation-for="InvNr" class="text-danger"></span> 

                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>

                <label asp-for="Popis" class="control-label"></label>
                <input asp-for="Popis" class="form-control" />
                <span asp-validation-for="Popis" class="text-danger"></span> 
                                
                <label asp-for="TeamId" class="control-label"></label>
@*                 <input asp-for="TeamId" class="form-control" /> *@
                <select asp-for="TeamId" class="form-control" asp-items="ViewBag.TeamId"></select>
                <span asp-validation-for="TeamId" class="text-danger"></span> 
                
                <label asp-for="DepartmentId" class="control-label"></label>
                <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span> 
                
                <div class="form-check">
                <label asp-for="IsHidden" class="form-check-label" for="flexCheckDefault"></label>
                <input asp-for="IsHidden" type="checkbox" class="form-check-input" id="flexCheckDefault" />
                <span asp-validation-for="IsHidden" class="text-danger"></span> 
                </div>

                <label asp-for="MistrId" class="control-label"></label>
                <select asp-for="MistrId" class="form-control" asp-items="ViewBag.MistrId"></select>
                <span asp-validation-for="MistrId" class="text-danger"></span> 

                <div>
                <label asp-for="StrojColor" class="form-label">Výběr barvy</label>
                <input asp-for="StrojColor" type="color" class="form-control form-control-color" value="#FFFFFF" title="Vyberte barvu">
                <span asp-validation-for="StrojColor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Vytvořit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
<a class="btn btn-info" asp-action="Index">Zpět na přehled</a>
</div>

