@model IEnumerable<StrojMistr>

@{
    ViewData["Title"] = "Index";
}

<h2>Strojníci</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Vytvořit nového strojníka</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MistrId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MistrId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alias)
            </td>


            @* <td class="barva_zakazky"> *@
            <td style="background-color: @Html.DisplayFor(modelItem => item.Color);">
                    @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Upravit</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detail</a> |
                    @{
                        if(item.Id.Equals(1))
                        {
                           <button class="btn btn-danger btn-sm" disabled>Smazat</button> 
                        }
                        else{
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Smazat</a> 
                        }
                    }
            </td>
        </tr>
    }
    </tbody>
</table>
<div>
    <a class="btn btn-info" asp-controller="StrojCalendar" asp-action="StrojManagerOverview">Zpět na přehled kalendáře</a>
</div>
